h1 Add a new word
form(action='newWord' method='post')
    h2 General information
    div.generalinfo
        div
            label(for='word') Word
            input(type='text' class='form-control' name='word' id='word' value='')
        div
            label(for='type') Type
            input(type='text' class='form-control' name='type' id='type' value='')
        div
            label(for='Translation') Translation
            input(type='text' class='form-control' name='translation' id='translation' value='')
    div.verbs
        div.form1
            div.form1_title
                h2 Form 1
            div.perfect
                div.perfect_title
                    h2 Perfect
                div.single
                    div
                        label(for='form1_perfect_ana') Ana
