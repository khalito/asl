                div.plural
                    div
                        label(for='form1_perfect_nahnu') Nahnu
                        input(type='text' name='form1_perfect_nahnu' id='form1_perfect_nahnu' value='')
                        br
                    div
                        label(for='form1_perfect_antum') Antum
                        input(type='text' name='form1_perfect_antum' id='form1_perfect_antum' value='')
                        br
                    div
                        label(for='form1_perfect_antunna') Antunna
                        input(type='text' name='form1_perfect_antunna' id='form1_perfect_antunna' value='')
