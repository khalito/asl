                    div
                        label(for='form1_perfect_anta') Anta
                        input(type='text' name='form1_perfect_anta' id='form1_perfect_anta' value='')
                        br
                    div
                        label(for='form1_perfect_anti') Anti
                        input(type='text' name='form1_perfect_anti' id='form1_perfect_anti' value='')
                        br
                    div
                        label(for='form1_perfect_huwa') Huwa
                        input(type='text' name='form1_perfect_huwa' id='form1_perfect_huwa' value='')
                        br
                    div
                        label(for='form1_perfect_hiya') Hiya
                        input(type='text' name='form1_perfect_hiya' id='form1_perfect_hiya' value='')
                        br
                    
                div.dual
                    div
                        label(for='form1_perfect_antumaa_male') Antumaa (male)
                        input(type='text' name='form1_perfect_antumaa_male' id='form1_perfect_antumaa_male' value='')
                        br
                    div
                        label(for='form1_perfect_antumaa_female') Antumaa (female)
                        input(type='text' name='form1_perfect_antumaa_female' id='form1_perfect_antumaa_female' value='')
                        br
                    div
                        label(for='form1_perfect_humaa_male') Humaa (male)
                        input(type='text' name='form1_perfect_humaa_male' id='form1_perfect_humaa_male' value='')
